@page
@model TimePunches.Pages.ResultsModel
@{
    ViewData["Title"] = "Processed JSON Files";
}

<h2>Processed JSON Files</h2>

@if (Model.Files.Count == 0)
{
    <p>No processed files found.</p>
}
else
{
    <div class="tile-container">
        @foreach (var file in Model.Files)
        {
            <a href="/outputfiles/@file" target="_blank" class="tile-link" title="@file" aria-label="@file">
                <div class="card small-square text-center">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center p-2">
                        <div class="tile-title">@file</div>
                    </div>
                </div>
            </a>
        }
    </div>
}

<style>
    .tile-container {
        display: flex;
        flex-wrap: wrap;
        gap: 10px; /* tighter horizontal spacing */
    }

    .tile-link {
        text-decoration: none;
        color: inherit;
        display: inline-block;
    }

    .small-square {
        width: 120px;
        height: 120px;
        transition: background-color 0.3s ease, transform 0.2s ease;
        cursor: pointer;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .small-square:hover {
        background-color: #007bff;
        color: #fff;
        transform: scale(1.05);
    }

    .tile-title {
        font-size: 0.8rem;
        line-height: 1.2;
        text-align: center;
        overflow: hidden;
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 2;
        word-break: break-word;
    }
</style>
